{
  "swagger": "2.0",
  "info": {
    "title": "Ambient REST API",
    "description": "Backend del proyecto Ambient",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api/",
  "tags": [
    {
      "name": "Auth",
      "description": "Autentificación y cuentas de usuario"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth/login/": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Inicia sesión y devuelve al usuario y el token JWT de autorización",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cuerpo de la solicitud",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "alanbrito"
                },
                "password": {
                  "type": "string",
                  "example": "12345"
                }
              },
              "required": [
                "username",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/register/": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Crea un nuevo usuario",
        "description": "Genera un hash + salt de contraseña. También crea una organización vacía para el usuario.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cuerpo de la solicitud",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "alanbrito"
                },
                "password": {
                  "type": "string",
                  "example": "12345"
                },
                "firstName": {
                  "type": "string",
                  "example": "Alan"
                },
                "lastName": {
                  "type": "string",
                  "example": "Brito"
                }
              },
              "required": [
                "username",
                "password",
                "firstName",
                "lastName"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/logout/": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Cierra la sesión del usuario",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cuerpo de la solicitud",
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/device/": {
      "get": {
        "tags": [
          "Device"
        ],
        "summary": "Obtiene la lista de dispositivos",
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Device"
        ],
        "summary": "Crea un nuevo dispositivo",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cuerpo de la solicitud",
            "schema": {
              "type": "object",
              "properties": {
                "uuid": {
                  "type": "string",
                  "example": "1234"
                },
                "name": {
                  "type": "string",
                  "example": "Sapitos"
                },
                "category": {
                  "type": "number",
                  "example": 1
                },
                "habitat": {
                  "type": "number",
                  "example": 3
                }
              },
              "required": [
                "uuid",
                "name",
                "category",
                "habitat"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/device/{uuid}": {
      "get": {
        "tags": [
          "Device"
        ],
        "summary": "Obtiene un dispositivo por su UUID",
        "description": "",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Identificador único UUID del dispositivo"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Device"
        ],
        "summary": "Modifica un dispositivo existente",
        "description": "",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Identificador único UUID del dispositivo"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Device"
        ],
        "summary": "Eliminar un dispositivo (soft-delete)",
        "description": "",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Identificador único UUID del dispositivo"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}